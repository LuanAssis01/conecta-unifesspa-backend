generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ENUMS
enum ProjectStatus {
  SUBMITTED
  APPROVED
  REJECTED
  ACTIVE
  FINISHED
}

enum AudienceEnum {
  INTERNAL
  EXTERNAL
}

enum UserRole {
  ADMIN
  TEACHER
  USER_UNIFESSPA
  USER_COMUNITY
}

/// MODELS

model Project {
  id                    String        @id @default(uuid())
  name                  String
  subtitle              String?
  overview              String?
  description           String?
  expected_results      String?
  start_date            DateTime
  duration              DateTime
  proposal_document_url String?
  img_url               String?
  registration_form_url String?
  numberVacancies       Int
  status                ProjectStatus
  audience              AudienceEnum

  /// RELACIONAMENTOS
  impactIndicators ImpactIndicator[]
  keywords         Keyword[]
  course           Course?           @relation(fields: [courseId], references: [id])
  courseId         String?

  creator   User?   @relation(fields: [creatorId], references: [id])
  creatorId String?
}

model Course {
  id       String    @id @default(uuid())
  name     String
  projects Project[]
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  role     UserRole
  projects Project[]
}

model Keyword {
  id        String   @id @default(uuid())
  name      String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}

model ImpactIndicator {
  id        String   @id @default(uuid())
  title     String
  value     Int
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}
