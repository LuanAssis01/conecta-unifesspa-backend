generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ENUMS
enum ProjectStatus {
  SUBMITTED
  APPROVED
  REJECTED
  ACTIVE
  FINISHED
}

enum AudienceEnum {
  INTERNAL
  EXTERNAL
}

enum UserRole {
  ADMIN
  TEACHER
  USER_UNIFESSPA
  USER_COMUNITY
}


/// MODELS
model Project {
  id                   Int                @id @default(autoincrement())
  name                 String
  subtitle             String?
  overview             String?
  description          String?
  expected_results     String?
  start_date           DateTime
  duration             DateTime
  proposal_document_url String?
  img_url              String?
  registration_form_url String?
  numberVacancies      Int
  status               ProjectStatus
  audience             AudienceEnum

  /// RELACIONAMENTOS
  impactIndicators     ImpactIndicators[]
  keywords             Keywords[]
  course               Course?            @relation(fields: [courseId], references: [id])
  courseId             Int?

  creator               User?              @relation(fields: [creatorId], references: [id])
  creatorId             Int?
}

model Course {
  id       Int       @id @default(autoincrement())
  name     String
  projects Project[]
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     UserRole
  projects Project[]
}

model Keywords {
  id       Int       @id @default(autoincrement())
  name     String
  project  Project?  @relation(fields: [projectid], references: [id])
  projectid Int?
}

model ImpactIndicators {
  id       Int       @id @default(autoincrement())
  title    String
  value    Int
  project  Project?  @relation(fields: [projectId], references: [id])
  projectId Int?
}

