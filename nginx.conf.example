# Configuração Nginx para Conecta Unifesspa
# Coloque este arquivo em /etc/nginx/sites-available/conecta-unifesspa
# E crie um link simbólico: ln -s /etc/nginx/sites-available/conecta-unifesspa /etc/nginx/sites-enabled/

upstream conecta_unifesspa_backend {
    server localhost:3333;
    keepalive 64;
}

server {
    listen 80;
    server_name seu-dominio.com www.seu-dominio.com;

    # Limite de tamanho de upload (ajuste conforme necessário)
    client_max_body_size 10M;

    # Logs
    access_log /var/log/nginx/conecta-unifesspa-access.log;
    error_log /var/log/nginx/conecta-unifesspa-error.log;

    # Compressão
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss;

    # Headers de segurança
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # API Backend
    location / {
        proxy_pass http://conecta_unifesspa_backend;
        proxy_http_version 1.1;
        
        # Headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Cache
        proxy_cache_bypass $http_upgrade;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://conecta_unifesspa_backend/health;
        access_log off;
    }

    # Arquivos estáticos de upload (se servidos pelo Nginx)
    # location /uploads {
    #     alias /caminho/para/o/projeto/api/uploads;
    #     expires 30d;
    #     add_header Cache-Control "public, immutable";
    # }
}

